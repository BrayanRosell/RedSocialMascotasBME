

@{Layout = null;}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - pets</title>
    <link rel="shortcut icon" href="/Img/icono.png">

    <!--JQUERY-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- FRAMEWORK BOOTSTRAP para el estilo de la pagina-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Los iconos tipo Solid de Fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
    <script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/Login.css">
</head>

<body id="Correcto">
    <header class="site-header">
        <div class="fondo">
            <div class="contenido-header">
                <nav class="redes-sociales">
                    <a href="/"><i class="fa fa-home" aria-hidden="true"></i></a>
                </nav>
            </div>
            <div class="modal-dialog text-center">
                <div class="col-sm-8 main-section">
                    <div class="modal-content">
                        <form action="/Auth/Registrar" id="Formulario" class="col-12" method="post" enctype="multipart/form-data">

                            <div class="col-12 user-img">
                                <div class="add-photo" id="add-photo">
                                    <img id="img" src="~/Img/camera.png" width="50" height="50" alt="Cargar Imagen" style="cursor:pointer" />
                                </div>
                                <input id="file" onchange="mostrar()" type="file" name="perfil" accept="image/x-png,image/gif,image/jpeg" />
                            </div>

                            <div class="form-group" id="user-group">
                                <input type="text" class="form-control" name="Username" placeholder="Username" required="" autofocus="" />
                                <p class="text-white">@Html.ValidationMessage("Nombres")</p>
                            </div>

                            <div class="form-group" id="user-group">
                                <input type="text" class="form-control" name="ApellidoPaterno" placeholder="Apellido paterno" required="" autofocus="" />
                                <p class="text-white">@Html.ValidationMessage("Apellidos")</p>
                            </div>

                            <div class="form-group" id="user-group">
                                <input type="text" class="form-control" name="ApellidoMaterno" placeholder="Apellido materno" required="" autofocus="" />
                                <p class="text-white">@Html.ValidationMessage("Apellidos")</p>
                            </div>

                            <div class="form-group" id="user-group">
                                <input type="text" class="form-control" name="Nombres" placeholder="Nombres" required="" autofocus="" />
                                <p class="text-white">@Html.ValidationMessage("Apellidos")</p>
                            </div>

                            <div class="form-group" id="">
                                <input type="date" class="form-control" name="FechaNacimiento" placeholder="Fecha de nacimiento" required="" min="1940-05-25" max="2003-11-16" autofocus="" />
                                <p class="text-white">@Html.ValidationMessage("Correo")</p>
                            </div>

                            <div class="form-group" id="email-group">
                                <input type="text" class="form-control" name="Dni" placeholder="Dni" required="" autofocus="" minlength="8" maxlength="9" />
                                <p class="text-white">@Html.ValidationMessage("Username")</p>
                            </div>

                            <div class="form-group" id="contrasena-group">
                                <input type="password" class="form-control" name="Password" placeholder="Password" required="" />
                                <p class="text-white">@Html.ValidationMessage("Password")</p>
                            </div>

                            <div class="form-group" id="contrasena-group">
                                <input type="password" class="form-control" placeholder="Confirmar Contraseña" name="passwordConf" />
                            </div>

                            <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i>  Registrar </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <script src="~/js/site.js"></script>
</body>
</html>
